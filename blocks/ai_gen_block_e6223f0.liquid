{% doc %}
  @prompt
    Create a simple table displaying gemstone specifications with schema markup for SEO. Include fields for stone name, total weight, average size, dimensions, shapes/cut, carat weight, color, clarity, origin, treatments, birthstones, and deal type. Use H2 heading "Gemstone Specification", support up to 3 entries per field, hide empty fields, and add structured data markup for search engines like Google, Bing, and Yahoo.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gemstone-table-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
    overflow-x: auto;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: 24px;
  }

  .ai-gemstone-table__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 24px 0;
    text-align: {{ block.settings.heading_alignment }};
  }

  .ai-gemstone-table__table-{{ ai_gen_id }} {
    width: 100%;
    border-collapse: collapse;
    border: {{ block.settings.table_border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.table_border_radius }}px;
    overflow: hidden;
  }

  .ai-gemstone-table__header-{{ ai_gen_id }} {
    background-color: {{ block.settings.header_bg_color }};
    color: {{ block.settings.header_text_color }};
    font-weight: 600;
    text-align: left;
    padding: 12px 16px;
    border-bottom: {{ block.settings.table_border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-gemstone-table__cell-{{ ai_gen_id }} {
    padding: 12px 16px;
    border-bottom: 1px solid {{ block.settings.border_color }};
    color: {{ block.settings.text_color }};
    vertical-align: top;
  }

  .ai-gemstone-table__row-{{ ai_gen_id }}:nth-child(even) {
    background-color: {{ block.settings.row_bg_color }};
  }

  .ai-gemstone-table__row-{{ ai_gen_id }}:last-child .ai-gemstone-table__cell-{{ ai_gen_id }} {
    border-bottom: none;
  }

  .ai-gemstone-table__label-{{ ai_gen_id }} {
    font-weight: 600;
    color: {{ block.settings.label_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-gemstone-table-{{ ai_gen_id }} {
      padding: 16px;
    }

    .ai-gemstone-table__table-{{ ai_gen_id }} {
      font-size: 14px;
    }

    .ai-gemstone-table__header-{{ ai_gen_id }},
    .ai-gemstone-table__cell-{{ ai_gen_id }} {
      padding: 8px 12px;
    }
  }
{% endstyle %}

