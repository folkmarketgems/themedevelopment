</div><script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": "{% if block.settings.stone_name_1 != blank %}{{ block.settings.stone_name_1 | escape }}{% endif %}",
  "description": "Gemstone specifications including {% if block.settings.total_weight != blank %}weight: {{ block.settings.total_weight | escape }}, {% endif %}{% if block.settings.carat_weight != blank %}carat weight: {{ block.settings.carat_weight | escape }}, {% endif %}{% if block.settings.color_1 != blank %}color: {{ block.settings.color_1 | escape }}{% endif %}",
  "category": "Gemstone",
  {% if block.settings.total_weight != blank %}
  "weight": {
    "@type": "QuantitativeValue",
    "value": "{{ block.settings.total_weight | escape }}"
  },
  {% endif %}
  "additionalProperty": [
    {% if block.settings.carat_weight != blank %}
    {
      "@type": "PropertyValue",
      "name": "Carat Weight",
      "value": "{{ block.settings.carat_weight | escape }}"
    },
    {% endif %}
    {% if block.settings.color_1 != blank %}
    {
      "@type": "PropertyValue",
      "name": "Color",
      "value": "{{ block.settings.color_1 | escape }}"
    },
    {% endif %}
    {% if block.settings.clarity != blank %}
    {
      "@type": "PropertyValue",
      "name": "Clarity",
      "value": "{{ block.settings.clarity | escape }}"
    },
    {% endif %}
    {% if block.settings.origin_1 != blank %}
    {
      "@type": "PropertyValue",
      "name": "Origin",
      "value": "{{ block.settings.origin_1 | escape }}"
    },
    {% endif %}
    {% if block.settings.shape_cut_1 != blank %}
    {
