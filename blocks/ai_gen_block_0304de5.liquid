{% doc %}
  @prompt
    generate social media share buttons such facebook, instagram, linkedin, pinterest, email, whatsapp,  - small size. SEO Optimized. THe link should share URL of Current Page 

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-social-share-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.spacing }}px;
    justify-content: {{ block.settings.alignment }};
  }

  .ai-social-share-button-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.button_size }}px;
    height: {{ block.settings.button_size }}px;
    border-radius: {{ block.settings.border_radius }}px;
    color: {{ block.settings.icon_color }};
    background-color: {{ block.settings.background_color }};
    transition: transform 0.2s ease, background-color 0.2s ease;
    text-decoration: none;}

  .ai-social-share-button-{{ ai_gen_id }}:hover {
    transform: scale(1.05);
    background-color: {{ block.settings.hover_color }};
  }

  .ai-social-share-button-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;fill: currentColor;
  }

  .ai-social-share-heading-{{ ai_gen_id }} {
    width: 100%;
    margin-top: 0;
    margin-bottom: {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    text-align: {{ block.settings.alignment }};
    color: {{ block.settings.text_color }};
  }
{% endstyle %}

<div class="ai-social-share-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h3 class="ai-social-share-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
  {% endif %}
  
  {% assign share_url = request.origin | append: request.path | url_encode %}
  {% assign share_title = page_title | url_encode %}
  {% if block.settings.show_facebook %}
    <a href="https://www.facebook.com/sharer/sharer.php?u={{ share_url }}" 
       target="_blank" 
       rel="noopener" 
       class="ai-social-share-button-{{ ai_gen_id }}" 
       aria-label="Share on Facebook">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2.04C6.5 2.04 2 6.53 2 12.06C2 17.06 5.66 21.21 10.44 21.96V14.96H7.9V12.06H10.44V9.85C10.44 7.34 11.93 5.96 14.22 5.96C15.31 5.96 16.45 6.15 16.45 6.15V8.62H15.19C13.95 8.62 13.56 9.39 13.56 10.18V12.06H16.34L15.89 14.96H13.56V21.96C15.9 21.59 18.03 20.4 19.6 18.64C21.18 16.88 22.1 14.65 22.1 12.32C22.1 6.53 17.5 2.04 12 2.04Z"/>
      </svg>
    </a>
  {% endif %}
  
  {% if block.settings.show_twitter %}
    <a href="https://twitter.com/intent/tweet?url={{ share_url }}&text={{ share_title }}" 
       target="_blank" 
       rel="noopener" 
       class="ai-social-share-button-{{ ai_gen_id }}" 
       aria-label="Share on Twitter">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/>
      </svg>
    </a>
  {% endif %}
  
  {% if block.settings.show_linkedin %}
    <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ share_url }}&title={{ share_title }}" 
       target="_blank" 
       rel="noopener" 
       class="ai-social-share-button-{{ ai_gen_id }}" 
       aria-label="Share on LinkedIn">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/>
      </svg>
    </a>
  {% endif %}
  
  {% if block.settings.show_pinterest %}
    <a href="https://pinterest.com/pin/create/button/?url={{ share_url }}&description={{ share_title }}" 
       target="_blank" 
       rel="noopener" 
       class="ai-social-share-button-{{ ai_gen_id }}" 
       aria-label="Share on Pinterest">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M9.04 21.54c.96.29 1.93.46 2.96.46a1010 0 0 0 10-10A10 10 0 0 0 12 210 10 0 0 0 2 12c0 4.25 2.67 7.9 6.44 9.34-.09-.78-.18-2.070-2.96l1.15-4.94s-.29-.58-.29-1.5c0-1.38.86-2.41 1.84-2.41.86 0 1.26.63 1.26 1.44 0 .86-.57 2.09-.86 3.27-.17.98.52 1.84 1.52 1.84 1.78 0 3.16-1.9 3.16-4.58 0-2.4-1.72-4.04-4.19-4.04-2.82 0-4.48 2.1-4.48 4.31 0 .86.28 1.73.74 2.3.09.06.09.14.06.29l-.29 1.09c0 .17-.11.23-.28.11-1.28-.56-2.02-2.38-2.02-3.85 0-3.16 2.24-6.03 6.56-6.03 3.44 0 6.12 2.47 6.12 5.75 0 3.44-2.13 6.2-5.18 6.2-.97 0-1.92-.52-2.26-1.13l-.67 2.37c-.23.86-.86 2.01-1.29 2.7v-.03z"/>
      </svg>
    </a>
  {% endif %}
  
  {% if block.settings.show_email %}
    <a href="mailto:?subject={{ share_title }}&body={{ share_url }}" 
       class="ai-social-share-button-{{ ai_gen_id }}" 
       aria-label="Share via Email">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
      </svg>
    </a>
  {% endif %}
  
  {% if block.settings.show_whatsapp %}
    <a href="https://api.whatsapp.com/send?text={{ share_title }}%20{{ share_url }}" 
       target="_blank" 
       rel="noopener" 
       class="ai-social-share-button-{{ ai_gen_id }}" 
       aria-label="Share on WhatsApp">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M16.75 13.96c.25.13.41.2.46.3.06.11.04.61-.211.18-.2.56-1.24 1.1-1.7 1.12-.46.03-.47.36-2.96-.73-2.49-1.09-3.99-3.75-4.11-3.92-.12-.17-.96-1.38-.92-2.61.05-1.22.69-1.8.95-2.04.24-.26.51-.29.68-.26h.47c.15 0 .36-.06.55.45l.69 1.87c.06.13.1.28.01.44l-.27.41-.39.42c-.12.12-.26.25-.12.5.12.26.621.091.32 1.78.91.88 1.71 1.17 1.95 1.3.24.14.39.12.54-.04l.81-.94c.19-.25.35-.19.58-.11l1.67.88M12 2a10 10 0 0 1 10 10 10 10 0 0 1-10 10c-1.97 0-3.8-.57-5.35-1.55L2 22l1.55-4.65A9.969 9.969 0 0 1 2 12 10 10 0 0 1 12 2m0 2a8 8 0 0 0-8 8c0 1.72.54 3.31 1.46 4.61L4.5 19.5l2.89-.96A7.95 7.95 0 0 0 12 20a8 8 0 0 0 8-8 8 8 0 0 0-8-8z"/>
      </svg>
    </a>
  {% endif %}
  {% if block.settings.show_instagram %}
    <a href="https://www.instagram.com/" 
       target="_blank" 
       rel="noopener" 
       class="ai-social-share-button-{{ ai_gen_id }}" 
       aria-label="Share on Instagram">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4H7.6m9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8 1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5 5 5 0 0 1-5 5 5 5 0 0 1-5-5 5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3 3 3 0 0 0 3 3 3 3 0 0 0 3-3 3 3 0 0 0-3-3z"/>
      </svg>
    </a>
  {% endif %}
</div>

