{% doc %}
  @prompt
    Create a responsive breadcrumb navigation component for blog article pages that displays the path like Home > Blog > Blog Post Name. The breadcrumbs should dynamically pull blog post information from Shopify's article and blog objects, include proper CSS styling for mobile and desktop, and incorporate structured data markup (JSON-LD) for SEO benefits. Make it customizable through theme settings.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-breadcrumb-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    font-family: {{ block.settings.font_family.family }}, {{ block.settings.font_family.fallback_families }};
  }

  .ai-breadcrumb-list-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-breadcrumb-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-breadcrumb-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-breadcrumb-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};text-decoration: {{ block.settings.link_hover_decoration }};
  }

  .ai-breadcrumb-current-{{ ai_gen_id }} {
    color: {{ block.settings.current_color }};
    font-weight: {{ block.settings.current_font_weight }};
  }

  .ai-breadcrumb-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.separator_size }}px;
    user-select: none;
  }

  @media screen and (max-width: 749px) {
    .ai-breadcrumb-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_font_size }}px;
      padding: {{ block.settings.mobile_padding_top }}px 0 {{ block.settings.mobile_padding_bottom }}px;
    }

    .ai-breadcrumb-list-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_item_spacing }}px;
    }

    .ai-breadcrumb-item-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_item_spacing }}px;
    }

    .ai-breadcrumb-separator-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_separator_size }}px;
    }

    {% if block.settings.hide_home_mobile %}
      .ai-breadcrumb-item-{{ ai_gen_id }}:first-child {
        display: none;
      }.ai-breadcrumb-item-{{ ai_gen_id }}:nth-child(2) .ai-breadcrumb-separator-{{ ai_gen_id }} {
        display: none;
      }
    {% endif %}
  }
{% endstyle %}

<nav class="ai-breadcrumb-{{ ai_gen_id }}" aria-label="Breadcrumb" {{ block.shopify_attributes }}>
  <ol class="ai-breadcrumb-list-{{ ai_gen_id }}"><li class="ai-breadcrumb-item-{{ ai_gen_id }}">
      <a href="{{ routes.root_url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">
        {{ block.settings.home_text }}
      </a>
    </li>

    {% if blog %}
      <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
        {% if article %}
          <a href="{{ blog.url }}" class="ai-breadcrumb-link-{{ ai_gen_id }}">
            {{ blog.title }}
          </a>
        {% else %}
          <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">
            {{ blog.title }}
          </span>
        {% endif %}
      </li>
    {% endif %}

    {% if article %}
      <li class="ai-breadcrumb-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
        <span class="ai-breadcrumb-current-{{ ai_gen_id }}" aria-current="page">
          {% if block.settings.truncate_title and article.title.size > block.settings.max_title_length %}
            {{ article.title | truncate: block.settings.max_title_length }}
          {% else %}
            {{ article.title }}
          {% endif %}
        </span>
      </li>
    {% endif %}
  </ol>
</nav>

{% if block.settings.enable_structured_data %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "{{ block.settings.home_text | escape }}",
        "item": "{{ shop.secure_url }}"
      }{% if blog %}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": "{{ blog.title | escape }}",
          "item": "{{ shop.secure_url }}{{ blog.url }}"
        }
      {% endif %}
      {% if article %}
        ,{
          "@type": "ListItem",
          "position": 3,
          "name": "{{ article.title | escape }}",
          "item": "{{ shop.secure_url }}{{ article.url }}"
        }
      {% endif %}
    ]
  }
  </script>
{% endif %}

