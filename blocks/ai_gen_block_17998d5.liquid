{% doc %}
  @prompt
    Create a responsive tags section for blog posts that displays clickable tag links with SEO-friendly semantic HTML. The section should be optimized for both desktop and mobile views with clean styling, proper spacing, and hover effects. Include structured data markup for better SEO performance.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-tags-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-blog-tags-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blog-tags-header-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-blog-tags-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0;
    font-weight: 600;
  }

  .ai-blog-tags-list-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.tag_spacing }}px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ai-blog-tags-item-{{ ai_gen_id }} {
    margin: 0;}

  .ai-blog-tags-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.tag_padding_vertical }}px {{ block.settings.tag_padding_horizontal }}px;
    background-color: {{ block.settings.tag_background_color }};
    color: {{ block.settings.tag_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.tag_border_radius }}px;
    border: {{ block.settings.tag_border_width }}px solid {{ block.settings.tag_border_color }};
    font-size: {{ block.settings.tag_font_size }}px;
    font-weight: {{ block.settings.tag_font_weight }};
    transition: all 0.3s ease;
    line-height: 1.4;
  }

  .ai-blog-tags-link-{{ ai_gen_id }}:hover,
  .ai-blog-tags-link-{{ ai_gen_id }}:focus {
    background-color: {{ block.settings.tag_hover_background_color }};
    color: {{ block.settings.tag_hover_text_color }};
    border-color: {{ block.settings.tag_hover_border_color }};
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-blog-tags-link-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.tag_hover_background_color }};
    outline-offset: 2px;
  }

  .ai-blog-tags-count-{{ ai_gen_id }} {
    opacity: 0.7;
    font-size: 0.9em;
    margin-left: 4px;
  }

  @media screen and (max-width: 768px) {
    .ai-blog-tags-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-blog-tags-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-blog-tags-list-{{ ai_gen_id }} {
      gap: {{ block.settings.tag_spacing | times: 0.8 }}px;
    }

    .ai-blog-tags-link-{{ ai_gen_id }} {
      padding: {{ block.settings.tag_padding_vertical | times: 0.8 }}px {{ block.settings.tag_padding_horizontal | times: 0.9 }}px;
      font-size: {{ block.settings.tag_font_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-blog-tags-list-{{ ai_gen_id }} {
      gap: {{ block.settings.tag_spacing | times: 0.6 }}px;
    }

    .ai-blog-tags-link-{{ ai_gen_id }} {
      padding: {{ block.settings.tag_padding_vertical | times: 0.7 }}px {{ block.settings.tag_padding_horizontal | times: 0.8 }}px;
      font-size: {{ block.settings.tag_font_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<section 
  class="ai-blog-tags-{{ ai_gen_id }}"
  aria-labelledby="ai-blog-tags-title-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-blog-tags-container-{{ ai_gen_id }}">
    {% if block.settings.show_title %}
      <header class="ai-blog-tags-header-{{ ai_gen_id }}">
        <h2 id="ai-blog-tags-title-{{ ai_gen_id }}" class="ai-blog-tags-title-{{ ai_gen_id }}">
          {{ block.settings.section_title }}
        </h2>
      </header>
    {% endif %}

    {% if block.settings.selected_blog != blank %}
      {% assign blog_tags = block.settings.selected_blog.all_tags %}
      {% if blog_tags.size > 0 %}
        <nav aria-label="Blog post tags">
          <ul class="ai-blog-tags-list-{{ ai_gen_id }}">
            {% for tag in blog_tags limit: block.settings.max_tags %}
              {% assign tag_articles_count = block.settings.selected_blog.tags[tag].size %}<li class="ai-blog-tags-item-{{ ai_gen_id }}">
                <a 
                  href="{{ blog.url }}/tagged/{{ tag | handle }}"
                  class="ai-blog-tags-link-{{ ai_gen_id }}"
                  rel="tag"
                  aria-label="View {{ tag_articles_count }} posts tagged with {{ tag }}"
                ><span>{{ tag }}</span>
                  {% if block.settings.show_post_count %}
                    <span class="ai-blog-tags-count-{{ ai_gen_id }}">({{ tag_articles_count }})</span>
                  {% endif %}
                </a>
              </li>
            {% endfor %}
          </ul>
        </nav>

        {% if block.settings.enable_structured_data %}
          <script type="application/ld+json">
          {
            "@context": "https://schema.org",
            "@type": "ItemList",
            "name": "{{ block.settings.section_title | escape }}",
            "description": "Tags for {{ block.settings.selected_blog.title | escape }} blog posts",
            "numberOfItems": {{ blog_tags.size | at_most: block.settings.max_tags }},
            "itemListElement": [
              {% for tag in blog_tags limit: block.settings.max_tags %}
                {
                  "@type": "ListItem",
                  "position": {{ forloop.index }},
                  "name": "{{ tag | escape }}",
                  "url": "{{ shop.url }}{{ blog.url }}/tagged/{{ tag | handle }}",
                  "description": "{{ block.settings.selected_blog.tags[tag].size }} blog posts tagged with {{ tag | escape }}"
                }{% unless forloop.last %},{% endunless %}
              {% endfor %}
            ]
          }
          </script>
        {% endif %}
      {% endif %}
    {% endif %}
  </div>
</section>

