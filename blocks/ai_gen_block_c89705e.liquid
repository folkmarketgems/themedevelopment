  }

  .ai-testimonial-text-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    flex-grow: 1;
  }

  .ai-testimonial-customer-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ai-testimonial-product-image-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .ai-testimonial-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-product-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-testimonial-product-placeholder-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
    color: #999;
  }

  .ai-testimonial-customer-info-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-testimonial-customer-name-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    color: {{ block.settings.customer_name_color }};
    margin: 0 0 4px;
  }

  .ai-testimonial-product-link-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
  }

  .ai-testimonial-product-link-{{ ai_gen_id }}:hover {
    text-decoration: underline;
  }

  .ai-testimonial-external-links-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    margin-top: 8px;
  }

  .ai-testimonial-external-link-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.external_link_color }};
    text-decoration: none;
    padding: 4px 8px;
    border: 1px solid {{ block.settings.external_link_color }};
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .ai-testimonial-external-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.external_link_color }};
    color: {{ block.settings.card_background_color }};
  }

  .ai-testimonials-carousel-{{ ai_gen_id }} {
    display: none;
    position: relative;
    overflow: hidden;
  }

  .ai-testimonials-carousel-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;
  }

  .ai-testimonials-carousel-slide-{{ ai_gen_id }} {
    flex: 0 0 100%;
    {% if block.settings.columns_mobile == '2' %}
      flex: 0 0 50%;
    {% endif %}
    padding: 0 8px;
  }

  .ai-testimonials-carousel-arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: background-color 0.3s ease;
  }

  .ai-testimonials-carousel-arrow-{{ ai_gen_id }}:hover {
    background-color: rgba(0, 0, 0, 0.9);
  }

  .ai-testimonials-carousel-arrow-prev-{{ ai_gen_id }} {
    left: 16px;
  }

  .ai-testimonials-carousel-arrow-next-{{ ai_gen_id }} {
    right: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-testimonials-grid-{{ ai_gen_id }} {
      display: none;
    }

    .ai-testimonials-carousel-{{ ai_gen_id }} {
